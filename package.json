{
  "name": "@michijs/michijs-storybook-template",
  "license": "MIT",
  "version": "0.0.1",
  "description": "Storybook template for MichiJS library",
  "files": [
    "dist/"
  ],
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "postinstall": "bun exec \"rm -rf node_modules/@types/react\" || bun --version || npm --version",
    "storybook": "storybook dev -p 6006",
    "build": "storybook build",
    "dist": "michi-server --dist",
    "dist-w": "michi-server --dist --w",
    "bun-link": "bun link --force",
    "link": "bunx concurrently bun:dist-w bun:bun-link",
    "test-tsc": "michi-server --test-tsc",
    "test-tsc-w": "tsc --noEmit --skipLibCheck -w"
  },
  "devDependencies": {
    "@michijs/tsconfig": "0.0.4",
    "@michijs/dev-server": "0.7.16",
    "@michijs/storybook-utils": "7.5.3-beta.10",
    "@storybook/addon-a11y": "8.2.6",
    "@storybook/addon-controls": "8.2.6",
    "@storybook/addon-docs": "8.2.6",
    "@storybook/addon-links": "8.2.6",
    "@storybook/addon-storysource": "8.2.6",
    "@storybook/addon-viewport": "8.2.6",
    "@storybook/builder-vite": "8.2.6",
    "@storybook/web-components-vite": "8.2.6",
    "storybook": "8.2.6",
    "storybook-dark-mode": "4.0.2",
    "typescript": "5.6.2"
  },
  "packageManager": "bun@1.1.20",
  "peerDependencies": {
    "@mdi/js": "^7.4.47",
    "@michijs/michijs": "^2.0.0-beta.105"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  }
}
