{
  "name": "@michijs/michijs-storybook-template",
  "license": "MIT",
  "version": "0.0.1",
  "description": "Storybook template for MichiJS library",
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook",
    "dist": "michi-server --dist",
    "test-tsc": "tsc --noEmit --skipLibCheck"
  },
  "keywords": [
    "web-components"
  ],
  "devDependencies": {
    "@michijs/dev-server": "0.2.3",
    "@storybook/addon-a11y": "6.5.16",
    "@storybook/addon-actions": "6.5.16",
    "@storybook/addon-essentials": "6.5.16",
    "@storybook/addon-links": "6.5.16",
    "@storybook/addon-storysource": "6.5.16",
    "@storybook/addons": "6.5.16",
    "@storybook/theming": "6.5.16",
    "@storybook/types": "7.0.0-alpha.44",
    "@storybook/web-components": "6.5.16",
    "esbuild-loader": "3.0.1",
    "lint-staged": "13.2.0",
    "rome": "12.0.0",
    "simple-git-hooks": "2.8.1",
    "typescript": "5.0.3"
  },
  "peerDependencies": {
    "@michijs/michijs": "1.1.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "rome check --apply",
      "rome format --write"
    ]
  }
}
